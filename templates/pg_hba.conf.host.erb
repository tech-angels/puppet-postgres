# <%= name %>
<%
if ips.class == Array then
  for i in ips do 
    if not i =~ /\/\d{1,2}/ then
      if i =~ /:/ then
        # Append /128 to single IPv6
        i = i + "/128"
      else
        # Append /32 to single IPv4
        i = i + "/32"
      end
    end
-%>
host<%= ssl %>	<%= database %>	<%= user %>	<%= i %>	<%= auth_method %>	<%= auth_options.join(',') %>
<% 
  end
else
  i = ips
  if not i =~ /\/\d{1,2}/ then
    if i =~ /:/ then
      # Append /128 to single IPv6
      i = i + "/128"
    else
      # Append /32 to single IPv4
      i = i + "/32"
    end
  end
-%>
host<%= ssl %>	<%= database %>	<%= user %>	<%= i %>	<%= auth_method %>	<%= auth_options.join(',') %>
<% end %>
