# <%= name %>
<%
if ips.class == Array then
  for i in ips do 
    if not i =~ /\/\d{1,2}/ then
      # Append /32 to single IP
      i = i + "/32"
    end
-%>
host<%= ssl %>	<%= database %>	<%= user %>	<%= i %>	<%= auth_method %>	<%= auth_options.join(',') %>
<% 
  end
else
  i = ips
  if not i =~ /\/\d{1,2}/ then
    # Append /32 to single IP
    i = i + "/32"
  end
-%>
host<%= ssl %>	<%= database %>	<%= user %>	<%= i %>	<%= auth_method %>	<%= auth_options.join(',') %>
<% end %>
